.product
  .product-header
    = link_to image_tag src="fmarket_logo_red.svg",size:"185x49",class:"product-header__img"
  %main.product-main
    %section.product-main__single-container
      #product-main__sell-container
        %div{"data-reactroot": ""}
          .product-main__sell-container-inner
            .product-single
              %h2.product-single__head 商品の情報を入力
              %form.product-single__sell-form
                .product-single__sell-upload-box
                  %h3.product-single__sell-upload-head
                    出品画像
                    %span.product-single__form-require 必須
                  %p.product-single__max-upload 最大10枚までアップロードできます
                  .product-single__sell-dropbox-container.clearfix.state-image-number-10
                    .product-single__sell-upload-items-container
                      .product-single__sell-upload-items.product-single__have-item-0
                        %ul.product-single__ul
                    .product-single__sell-upload-drop-box.product-single__have-item-0
                      %input.product-single__sell-upload-drop-file{multiple: "multiple", name: "image1", style: "display: none;", type: "file"}
                      %pre.product-single__visible-pc
                        :preserve
                          ドラッグアンドドロップ
                            またはクリックしてファイルをアップロード
                .product-name
                  .product-name__sell-content
                    .product-name__form-group
                      %label.product-name__label
                        商品名
                        %span.product-name__form-require 必須
                      %div
                        %input.product-name__input-default{placeholder: "商品名（必須 40文字まで)", value: ""}/
                    .product-name__form-group
                      %label
                        商品の説明
                        %span.product-name__form-require 必須
                      %textarea.product-name__textarea-default{placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"}



                  .detaile
                    .detaile__sell-content.clearfix
                      %h3.detaile__sell-sub-head 商品の詳細
                      .detaile__sell-form-box
                        .detaile__form-group
                          %label.detaile__label
                            カテゴリー
                            %span.detaile__form-require 必須
                          %div
                            .detaile__select-wrap
                              %i.detaile__icon-arrow-bottom
                                = icon('fas','chevron-down')
                              %select.detaile__select-default
                                %option{value: ""} ---
                                %option{value: "1"} レディース
                                %option{value: "2"} メンズ
                                %option{value: "3"} ベビー・キッズ
                                %option{value: "4"} インテリア・住まい・小物
                                %option{value: "5"} 本・音楽・ゲーム
                                %option{value: "1328"} おもちゃ・ホビー・グッズ
                                %option{value: "6"} コスメ・香水・美容
                                %option{value: "7"} 家電・スマホ・カメラ
                                %option{value: "8"} スポーツ・レジャー
                                %option{value: "9"} ハンドメイド
                                %option{value: "1027"} チケット
                                %option{value: "1318"} 自動車・オートバイ
                                %option{value: "10"} その他

                        .detaile__form-group
                          %label.detaile__label
                            商品の状態
                            %span.detaile__form-require 必須
                          .detaile__select-wrap
                            %i.detaile__icon-arrow-bottom
                              = icon('fas','chevron-down')
                            %select.detaile__select-default
                              %option{value: ""} ---
                              %option{value: "1"} 新品、未使用
                              %option{value: "2"} 未使用に近い
                              %option{value: "3"} 目立った傷や汚れなし
                              %option{value: "4"} やや傷や汚れあり
                              %option{value: "5"} 傷や汚れあり
                              %option{value: "6"} 全体的に状態が悪い

                  .delivery
                    .delivery__sell-content.clearfix
                      .delivery__infobox
                        %h3.delivery__sell-sub-head 配送について
                        %a.delivery__form-question{href: "/jp/help_center/article/68/", target: "_blank"} ?
                      .delivery__sell-form-box
                        .delivery__form-group
                          %label.delivery__label
                            配送料の負担
                            %span.delivery__form-require 必須
                          .delivery__select-wrap
                            %i.delivery__icon-arrow-bottom
                              = icon('fas','chevron-down')
                            %select.delivery__select-default
                              %option{value: ""} ---
                              %option{value: "2"} 送料込み(出品者負担)
                              %option{value: "1"} 着払い(購入者負担)
                        .delivery__form-group
                          %label.delivery__label
                            発送元の地域
                            %span.delivery__form-require 必須
                          .delivery__select-wrap
                            %i.delivery__icon-arrow-bottom
                              = icon('fas','chevron-down')
                            %select.delivery__select-default
                              %option{value: ""} ---
                              %option{value: "1"} 北海道
                              %option{value: "2"} 青森県
                              %option{value: "3"} 岩手県
                              %option{value: "4"} 宮城県
                              %option{value: "5"} 秋田県
                              %option{value: "6"} 山形県
                              %option{value: "7"} 福島県
                              %option{value: "8"} 茨城県
                              %option{value: "9"} 栃木県
                              %option{value: "10"} 群馬県
                              %option{value: "11"} 埼玉県
                              %option{value: "12"} 千葉県
                              %option{value: "13"} 東京都
                              %option{value: "14"} 神奈川県
                              %option{value: "15"} 新潟県
                              %option{value: "16"} 富山県
                              %option{value: "17"} 石川県
                              %option{value: "18"} 福井県
                              %option{value: "19"} 山梨県
                              %option{value: "20"} 長野県
                              %option{value: "21"} 岐阜県
                              %option{value: "22"} 静岡県
                              %option{value: "23"} 愛知県
                              %option{value: "24"} 三重県
                              %option{value: "25"} 滋賀県
                              %option{value: "26"} 京都府
                              %option{value: "27"} 大阪府
                              %option{value: "28"} 兵庫県
                              %option{value: "29"} 奈良県
                              %option{value: "30"} 和歌山県
                              %option{value: "31"} 鳥取県
                              %option{value: "32"} 島根県
                              %option{value: "33"} 岡山県
                              %option{value: "34"} 広島県
                              %option{value: "35"} 山口県
                              %option{value: "36"} 徳島県
                              %option{value: "37"} 香川県
                              %option{value: "38"} 愛媛県
                              %option{value: "39"} 高知県
                              %option{value: "40"} 福岡県
                              %option{value: "41"} 佐賀県
                              %option{value: "42"} 長崎県
                              %option{value: "43"} 熊本県
                              %option{value: "44"} 大分県
                              %option{value: "45"} 宮崎県
                              %option{value: "46"} 鹿児島県
                              %option{value: "47"} 沖縄県
                              %option{value: "99"} 未定
                        .delivery__form-group
                          %label
                            発送までの日数
                            %span.delivery__form-require 必須
                          .delivery__select-wrap
                            %i.delivery__icon-arrow-bottom
                              = icon('fas','chevron-down')
                            %select.delivery__select-default
                              %option{value:""} ---
                              %option{value:"1"} 1~2日で発送
                              %option{value:"2"} 2~3日で発送
                              %option{value:"3"} 4~7日で発送

                  .price              
                    .price__sell-content.clearfix
                      .price__box
                        %h3.price__sell-sub-head 販売価格(300〜9,999,999)
                        %a.price__form-question{href:"/jp/help_center/article/64/",  arget:"_blank"} ?
                      .price__sell-form-box
                        %ul.price__sell-price
                          %li.price__form-group
                            .clearfix
                              %label.price__l-left
                                価格
                                %span.price__form-require 必須
                              .price__l-right.price__sell-price-input
                                ¥
                                %div.price__div
                                  %input.price__input-default{placeholder: "例）300", value: ""}/
                          %li.price__clearfix
                            .price__l-left
                              販売手数料 (10%)
                            .price__l-right -
                          %li.price__clearfix.price__bold
                            .price__l-left 販売利益
                            .price__l-right -
                    .modal{role: "dialog", tabindex: "-1"}
                      .modal__inner




                  .caution
                    .caution__sell-content.caution__sell-btn-box
                      %div.caution__div
                        %p.caution__p
                          %a.caution__a{href: "/jp/help_center/getting_started/prohibited_items/", target: "_blank"} 禁止されている出品
                          、
                          %a.caution__a{href: "/jp/help_center/getting_started/prohibited_conduct/", target: "_blank"} 行為
                          を必ずご確認ください。
                        %p.caution__p
                          またブランド品でシリアルナンバー等がある場合はご記載ください。
                          %a.caution__a{href: "/jp/help_center/getting_started/counterfeit_goods/", target: "_blank"} 偽ブランドの販売
                          は犯罪であり処罰される可能性があります。
                        %p.caution__p
                          また、出品をもちまして
                          %a.caution__a{href: "/jp/seller_terms/"} 加盟店規約
                          に同意したことになります。
                      %button.price__btn-default.price__btn-red{type: "submit"}
                        出品する
                      .price__btn 
                        = link_to 'もどる','#',class:"price__btn-gray"
            .overlay




      .product-footer
        .product-footer__center
          %nav
            %ul.menu
              %li
                = link_to "プライバシーポリシー","#"
              %li
                = link_to "メルカリ利用規約","#"
              %li
                = link_to "特定商取引に関する表記","#"
          .product-footer__center__logo
            =link_to image_tag("/assets/logo_gray.svg", width:"80", height:"65",class:"footer__center__logo--red"),"#"
          %p.inc
            ©︎Mercari,Inc.