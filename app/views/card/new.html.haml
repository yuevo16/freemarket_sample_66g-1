.wrapper
  =render "post/header"
  = render 'mypage/side_bar'
  .card_main
    = form_tag(pay_signup_index_path, method: :post, id: 'charge-form', name: 'inputForm', class: 'main__container') do
      .main__container__header
        クレジットカード情報入力
      .main__container__form
        .main__container__form__card
          .main__container__form__card__title
            カード番号
          .main__container__form__card__require
            必須
          = text_field_tag "number", "", maxlength: "16",type: "text", id: 'card_number', placeholder:"半角数字のみ", class: "main__container__form__card__number"
          .main__container__form__card__image
            = image_tag("credit-card_22@0.5.png", class: "main__container__form__card__image__icon")
            = image_tag("credit-card_9@0.5.png", class: "main__container__form__card__image__icon")
            = image_tag("credit-card_26@0.5.png", class: "main__container__form__card__image__icon")
            = image_tag("jcb-logomark-img-01.gif", class: "main__container__form__card__image__icon")
            = image_tag("amex-logomark-img-04.gif", class: "main__container__form__card__image__icon")
            = image_tag("diners-logomark-img-01.gif", class: "main__container__form__card__image__icon")
            = image_tag("discover-logomark-img-08.gif", class: "main__container__form__card__image__icon")
        .main__container__form__limit
          .main__container__form__limit__title
            有効期限
          .main__container__form__limit__require
            必須
          .main__container__form__limit__form
            .main__container__form__limit__month
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月/
            .main__container__form__limit__year
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
        .main__container__form__security
          .main__container__form__security__title
            セキュリティーコード
          .main__container__form__security__require
            必須
          = text_field_tag "cvc", "", maxlength: "4",type: "text", id: "cvc", placeholder:"カードの背面4桁もしくは3桁の番号", class: "main__container__form__security__number"
          #card_token
        .main__container__form__question
          .main__container__form__question__mark
            %span ?
            カードの裏面の番号とは？
        .main__container__form__btn
          = submit_tag "追加する" , id:"token_submit", class: "main__container__form__btn__red" 
  
  = render 'post/footer_image'
  = render 'post/footer'
  = render 'post/sell-camera'